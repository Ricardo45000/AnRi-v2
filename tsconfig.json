{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, 
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5", // or your desired target
    "module": "esnext", // this enables dynamic imports
    "types": ["node"],
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "include": ["src/**/*.ts", ".env"],
  "exclude": [
    "node_modules",
    "lib.dom.d.ts" // Exclude lib.dom.d.ts
  ]
}
